<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/orden_visita_root"
    tools:context=".OrdenVisitaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/barOrdenVisita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarOrdenVisita"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/barOrdenVisita">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen_horizontal"
                android:layout_marginRight="@dimen/margen_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tecnico"
                    style="@style/subtitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margen_vertical"
                    android:text="@string/tecnico" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margen_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="@dimen/icono"
                        android:layout_height="@dimen/icono"
                        android:src="@drawable/ic_person" />

                    <TextView
                        android:id="@+id/nombretecnico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margen_horizontal"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/telefonovisita"
                    style="@style/subtitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margen_vertical"
                    android:text="@string/telefonovisita" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margen_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/phone_orden_visita"
                        android:layout_width="@dimen/icono"
                        android:layout_height="@dimen/icono"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        android:id="@+id/telefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margen_horizontal"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/lugar"
                    style="@style/subtitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margen_vertical"
                    android:text="@string/lugar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margen_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="@dimen/icono"
                        android:layout_height="@dimen/icono"
                        android:src="@drawable/ic_location_on" />

                    <TextView
                        android:id="@+id/lugarvisita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margen_horizontal" />

                </LinearLayout>

                <TextView
                    android:id="@+id/fechaV"
                    style="@style/subtitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margen_vertical"
                    android:text="@string/fechaV" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margen_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="@dimen/icono"
                        android:layout_height="@dimen/icono"
                        android:src="@drawable/ic_today" />

                    <TextView
                        android:id="@+id/fecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margen_horizontal" />

                </LinearLayout>


