<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <android.support.design.widget.AppBarLayout
          android:id="@+id/barPresupuesto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:theme="@style/AppTheme.AppBarOverlay">

         <android.support.v7.widget.Toolbar
             android:id="@+id/toolbarEjecucion"
             android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize"
             android:background="?attr/colorPrimary"
             app:popupTheme="@style/AppTheme.PopupOverlay" />

      </android.support.design.widget.AppBarLayout>

      <RelativeLayout
          android:layout_below="@+id/barPresupuesto"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

         <LinearLayout
             android:orientation="vertical"
             android:layout_marginRight="@dimen/margen_vertical"
             android:layout_marginLeft="@dimen/margen_vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/linearLayout3">

            <LinearLayout
                android:background="@color/colorBlanco"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <ImageView
                   android:id="@+id/iconodetalleejecucion1"
                   android:layout_width="@dimen/icono"
                   android:layout_height="@dimen/icono"
                   android:src="@android:drawable/checkbox_on_background"/>

               <TextView
                   android:id="@+id/detalleejecucion1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/margen_horizontal"
                   android:paddingBottom="5dp"
                   android:paddingTop="5dp"
                   android:text="Romper Paredes
                   Encargado: Juan Perez
                   Fecha:12/11/2017
                   Estatus:Culminado"
                   android:textColor="@color/colorNegro"
                   android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen_vertical"
                android:orientation="horizontal">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen_vertical"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:background="@color/colorBlanco"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <ImageView
                   android:id="@+id/iconodetalleejecucion2"
                   android:layout_width="@dimen/icono"
                   android:layout_height="@dimen/icono"
                   android:src="@android:drawable/checkbox_on_background" />

               <TextView
                   android:id="@+id/detalleejecucion2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:layout_marginLeft="@dimen/margen_horizontal"
                   android:text="Sustituir Tuberias
                   Encargado:Juan Perez
                   Fecha:13/11/20
                   Estatus:Culminado"
                   android:textColor="@color/colorNegro"
                   android:textSize="14dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen_vertical"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen_vertical"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlanco"
                android:gravity="center"
                android:orientation="horizontal">

               <ImageView
                   android:id="@+id/iconodetalleejecucion3"
                   android:layout_width="@dimen/icono"
                   android:layout_height="@dimen/icono"
                   android:src="?android:attr/alertDialogIcon" />

               <TextView
                   android:id="@+id/detalleejecucion3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/margen_horizontal"
                   android:paddingBottom="5dp"
                   android:paddingTop="5dp"
                   android:text="Acomodar Paredes
                   Encargado:Juan Perez
                   Estatus:Pendiente"
                   android:textColor="@color/colorNegro"
                   android:textSize="14dp" />

            </LinearLayout>


         </LinearLayout>



      </RelativeLayout>

   </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
